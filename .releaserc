{
    "branches": [
        "main",
        "master"
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "parserOpts": {
                    "noteKeywords": [
                        "BREAKING CHANGE",
                        "BREAKING CHANGES",
                        "BREAKING"
                    ]
                },
                "releaseRules": [
                    {
                        "breaking": true,
                        "release": "major"
                    },
                    {
                        "type": "feat",
                        "release": "minor"
                    },
                    {
                        "type": "fix",
                        "release": "patch"
                    },
                    {
                        "type": "perf",
                        "release": "patch"
                    },
                    {
                        "type": "revert",
                        "release": "patch"
                    },
                    {
                        "type": "docs",
                        "release": "minor"
                    },
                    {
                        "type": "style",
                        "release": "patch"
                    },
                    {
                        "type": "refactor",
                        "release": "patch"
                    },
                    {
                        "type": "test",
                        "release": "patch"
                    },
                    {
                        "type": "build",
                        "release": "patch"
                    },
                    {
                        "type": "ci",
                        "scope": "ci-*",
                        "release": "patch"
                    },
                    {
                        "type": "chore",
                        "release": false
                    },
                    {
                        "type": "no-release",
                        "release": false
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "parserOpts": {
                    "noteKeywords": [
                        "BREAKING CHANGE",
                        "BREAKING CHANGES",
                        "BREAKING"
                    ]
                },
                "writerOpts": {
                    "commitsSort": [
                        "subject",
                        "scope"
                    ]
                },
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "ðŸ• Features"
                        },
                        {
                            "type": "feature",
                            "section": "ðŸ• Features"
                        },
                        {
                            "type": "fix",
                            "section": "ðŸ› Bug Fixes"
                        },
                        {
                            "type": "perf",
                            "section": "ðŸ”¥ Performance Improvements"
                        },
                        {
                            "type": "revert",
                            "section": "â© Reverts"
                        },
                        {
                            "type": "docs",
                            "section": "ðŸ“ Documentation"
                        },
                        {
                            "type": "style",
                            "section": "ðŸŽ¨ Styles"
                        },
                        {
                            "type": "refactor",
                            "section": "ðŸ§‘â€ðŸ’» Code Refactoring"
                        },
                        {
                            "type": "test",
                            "section": "âœ… Tests"
                        },
                        {
                            "type": "build",
                            "section": "ðŸ¤– Build System"
                        },
                        {
                            "type": "ci",
                            "section": "ðŸ” Continuous Integration"
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogTitle": "# ðŸ“¦ Changelog \n[![conventional commits](https://img.shields.io/badge/conventional%20commits-1.0.0-yellow.svg)](https://conventionalcommits.org)\n[![semantic versioning](https://img.shields.io/badge/semantic%20versioning-2.0.0-green.svg)](https://semver.org)\n> All notable changes to this project will be documented in this file"
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "node -e \"const fs=require('fs');const p=require('./extension/package.json');p.version='${nextRelease.version}';fs.writeFileSync('./extension/package.json',JSON.stringify(p,null,2)+'\n');\" && make build VERSION=${nextRelease.version} && make release-artifacts VERSION=${nextRelease.version}",
                "publishCmd": "echo \"Prepared VSIX and CLI binaries for ${nextRelease.version}\""
            }
        ],
        [
            "@semantic-release/github",
            {
                "addReleases": "bottom",
                "assets": [
                    {
                        "path": "extension/*.vsix",
                        "label": "VSCode Extension Package"
                    },
                    {
                        "path": "dist/*",
                        "label": "CLI Binaries"
                    }
                ]
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "LICENSE*",
                    "CHANGELOG.md",
                    "extension/package.json"
                ],
                "message": "chore(${nextRelease.type}): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ]
    ]
}
