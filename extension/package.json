{
  "name": "cursor-rules-manager",
  "displayName": "Cursor Rules Manager",
  "description": "Manage shared Cursor rules across projects (thin wrapper around cursor-rules CLI)",
  "version": "0.0.2",
  "publisher": "DaOfficialWizard",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onCommand:cursorRules.sync",
    "onCommand:cursorRules.showEffective",
    "onCommand:cursorRules.installPreset"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorRules.installPreset",
        "title": "Cursor Rules: Install Preset"
      },
      {
        "command": "cursorRules.sync",
        "title": "Cursor Rules: Sync Shared Presets"
      },
      {
        "command": "cursorRules.showEffective",
        "title": "Cursor Rules: Show Effective Rules"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "@vscode/vsce package",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.60.0",
    "@vscode/test-electron": "^2.3.7",
    "mocha": "^10.0.0",
    "@types/mocha": "^10.0.10",
    "@types/glob": "^8.1.0",
    "@vscode/vsce": "^2.30.0"
  }
}